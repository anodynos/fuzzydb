<?xml version="1.0" encoding="UTF-8"?>
<ScoreConfiguration name="similarPeople">

    <BooleanScorer>
        <scorerAttrId>isMale</scorerAttrId>
        <otherAttrId>isMale</otherAttrId>
        <weight>0.7</weight>
    </BooleanScorer>

    <EnumMatchScorer>
        <scorerAttrId>newspapers</scorerAttrId>
        <otherAttrId>newspapers</otherAttrId>
        <weight>0.7</weight>
    </EnumMatchScorer>        

    <EnumMatchScorer>
        <scorerAttrId>education</scorerAttrId>
        <otherAttrId>education</otherAttrId>
        <weight>0.7</weight>
    </EnumMatchScorer>        

    <SimilarFloatValueScorer>
        <scorerAttrId>salary</scorerAttrId>
        <otherAttrId>salary</otherAttrId>
        <expectedRange>2e4f</expectedRange> <!-- Within 20k -->
    </SimilarFloatValueScorer>

    <SimilarFloatValueScorer>
        <scorerAttrId>age</scorerAttrId>
        <otherAttrId>age</otherAttrId>
        <expectedRange>20</expectedRange> 
        <weight>0.7</weight>
    </SimilarFloatValueScorer>

    <FloatRangePreferenceScorer>
        <scorerAttrId>ageRange</scorerAttrId>
        <otherAttrId>age</otherAttrId>
        <weight>0.7</weight>
        <!-- Simple linear scorer falls off to zero at edge of range --> 
        <!-- <scoreMapper class="LinearScoreMapper" /> -->
        
        <!-- Asymptotic scorer tends to zero at infinity -->
        <scoreMapper class="AsymptoticScoreMapper">
            <squareness>3</squareness> 
            <inverseValueAtBoundary>2.5</inverseValueAtBoundary> <!-- Will become valueAtBoundary once migrated away from XStream for reading this -->
            <!-- i.e. score is 40% at boundary --> 
        </scoreMapper>
    </FloatRangePreferenceScorer>


</ScoreConfiguration>